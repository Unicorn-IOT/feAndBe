{
	"compilerOptions": {
		"lib": ["ES2020"],
		"allowJs": true,
		"baseUrl": "src",
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "ES2020",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"target": "ES2020"
	},
	"exclude": ["node_modules"],
	"include": ["**/*.ts", "../types/http.ts", "../types/http.ts", "../types/lambda.ts", "../types/User.ts"]
}
